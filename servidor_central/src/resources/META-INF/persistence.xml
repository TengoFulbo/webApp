<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="PA2023" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>turismouy.svcentral.entidades.actividad</class>
		<class>turismouy.svcentral.entidades.departamento</class>
		<class>turismouy.svcentral.entidades.paquete</class>
		<class>turismouy.svcentral.entidades.proveedor</class>
		<class>turismouy.svcentral.entidades.salida</class>
		<class>turismouy.svcentral.entidades.turista</class>
		<class>turismouy.svcentral.entidades.usuario</class>
		<class>turismouy.svcentral.entidades.inscripcion</class>
		<class>turismouy.svcentral.entidades.categoria</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/PA2023" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="admin" />
			
			<!-- create / create-drop / update -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            
<!-- 			Show SQL in console -->
            <!-- <property name="hibernate.show_sql" value="true" /> -->
            <!-- <property name="hibernate.format_sql" value="true" /> -->
			<!-- property name="javax.persistence.schema-generation.database.action" value="none" /> -->
<!-- 			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" /> -->
			<!-- property name="javax.persistence.schema-generation.database.action" value="create" /> -->
			<!-- <property name="javax.persistence.schema-generation.database.action" value="drop" /> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		</properties>

	</persistence-unit>

</persistence>
